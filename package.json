{
  "name": "speakandspell",
  "author": "Andrea Callea",
  "description": "Speak & Spell in Elm :)",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.12",
    "elm-i18next-gen": "^1.1.0",
    "elm-review": "^2.13.4",
    "elm-test": "^0.19.1-revision16",
    "elm-tooling": "^1.16.0",
    "flag-icons": "^7.5.0",
    "tailwindcss": "^4.1.12",
    "vite": "^7.1.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-elm": "^3.0.1",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-webfont-dl": "^3.11.1"
  },
  "scripts": {
    "postinstall": "elm-tooling install",
    "dev": "vite",
    "prebuild": "elm-tooling install && npm run localegen",
    "build": "vite build",
    "preview": "vite preview",
    "review": "elm-review --fix-all",
    "test": "elm-test-rs",
    "localegen": "elm-i18next-gen --source public/translations/translations.en.json --target src/elm --overwrite"
  },
  "standard": {
    "ignore": [
      "public",
      "dist",
      "elm.js"
    ]
  }
}
